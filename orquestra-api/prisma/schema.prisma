generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  boards    Board[]
}

model Board {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  // Relacionamento: Um quadro pode ter várias tarefas
  tasks     Task[]
}

// Model para representar a tabela de Tarefas (Tasks)
model Task {
  id          String   @id @default(uuid())
  title       String
  description String? 
  status      String   @default("A_FAZER") // Valor padrão para o status

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamento: Uma tarefa pertence a um único quadro
  boardId String
  board   Board  @relation(fields: [boardId], references: [id])
}
